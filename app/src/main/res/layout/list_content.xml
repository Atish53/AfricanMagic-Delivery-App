            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="4"
            android:padding="8dp"
            android:fontFamily="sans-serif"
            android:text="deliveries"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
    </RelativeLayout>

